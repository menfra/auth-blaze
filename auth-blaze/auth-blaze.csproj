<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <Description>Auth-Blaze enforces zero trust principles by verifying identity, device, and contextual information for every request.</Description>
	  <PackageTags>zero trust; multi-factor authentication; IP geolocation; token validation; .NET</PackageTags>
	  <PackageId>menfra.auth-blaze</PackageId>
	  <Authors>Frank Mensah</Authors>
	  <Company>Frank Mensah</Company>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <Version>3.2.3</Version>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <RepositoryUrl>https://github.com/YourRepo/Auth-Blaze</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Authentication\" />
	  <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.0" />
  </ItemGroup>

</Project>
